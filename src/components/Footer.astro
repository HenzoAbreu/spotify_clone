---
import {
  Play,
  Shuffle,
  SkipBack,
  SkipForward,
  Repeat,
  Mic2,
  ListMusic,
  MonitorSpeaker,
  Volume1,
  Maximize2,
} from "lucide-react";

import goodkid from "../assets/goodkid.jpg";
---

<footer
  class="bg-zinc-900 border-t border-zinc-700 px-6 py-3 flex items-center justify-between"
>
  <div class="flex items-center gap-3">
    <img src={goodkid.src} width={56} height={56} />
    <div class="flex flex-col">
      <strong class="font-normal text-sm">Money Trees</strong>
      <span class="text-xs text-zinc-400">Kendrick Lamar</span>
    </div>
  </div>
  <div class="flex flex-col items-center gap-2">
    <div class="flex items-center gap-6">
      <Shuffle size={20} color="#e4e4e7" />
      <SkipBack size={20} color="#e4e4e7" />
      <button
        class="bg-white text-black w-10 h-10 flex items-center justify-center pl-1 rounded-full"
      >
        <Play />
      </button>
      <SkipForward size={20} color="#e4e4e7" />
      <Repeat size={20} color="#e4e4e7" />
    </div>
    <div class="flex items-center gap-2">
      <span class="text-xs text-zinc-400">1:43</span>
      <div class="h-1 rounded-full w-96 bg-zinc-600">
        <div class="bg-zinc-200 w-28 h-1 rounded-full"></div>
      </div>
      <span class="text-xs text-zinc-400">6:26</span>
    </div>
  </div>

  <div class="flex gap-4 items-center text-zinc-400">
    <Mic2 size={20} />
    <ListMusic size={20} />
    <MonitorSpeaker size={20} />
    <Volume1 size={20} />
    <div class="h-1 rounded-full w-16 bg-zinc-600">
      <div class="bg-zinc-200 w-4 h-1 rounded-full"></div>
    </div>
    <Maximize2 size={20} />
  </div>
</footer>
